{
  "name": "back_end",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "_notes": {
    "info": "This section holds explanations for each script instead of using // comments.",
    "dev_standalone": "Run tsx directly without dotenv",
    "dev": "Run tsx with dotenvx default env file",
    "dev_env_specific": "Run tsx with a specific env file",
    "start_env_specific": "Run compiled server.js with encrypted env file",
    "build&prod:watch": "Compile in watch mode and run dist/server.js with hot reload",
    "build&prod_env_specific:watch": "Same as above but with encrypted env file"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "cross-env NODE_ENV=development tsx watch src/server.ts",
    "lint": "eslint . --ext .ts,.tsx,.mts,.cts",
    "lint:fix": "eslint . --ext .ts,.tsx,.mts,.cts --fix",
    "format": "prettier --write .",
    "clean": "rimraf dist",
    "copy:assets:cross_platform": "cpx \"src/db/*.sql\" dist/db",
    "copy-sql:windows": "mkdir dist\\db && copy src\\db\\*.sql dist\\db\\",
    "dev:standalone": "tsx watch src/server.ts",
    "build:init": "tsc",
    "build:alias:org": "tsc && tsc-alias && echo 'Build completed'",
    "clean_build:alias:copy_db": "npm run clean && tsc && tsc-alias && echo 'Build completed' && npm run copy:assets:cross_platform",
    "clean_build:alias": "npm run clean && tsc && tsc-alias && echo 'Build completed'",
    "build:windows": "npm run clean && tsc && tsc-alias && npm run copy-sql:windows && echo \"Build completed\"",
    "build": "npm run clean && tsc && tsc-alias && npm run copy:assets:cross_platform && echo \"Build completed\"",
    "build:watch:init": "tsc --watch",
    "build:watch": "concurrently -n \"TSC,ALIAS\" -c \"cyan,magenta\" \"tsc --watch\" \"chokidar dist --initial --command 'tsc-alias'\"",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "prod:watch": "cross-env NODE_ENV=production node --watch dist/server.js",
    "build&prod:watch": "concurrently -n \"TSC,NODE\" -c \"cyan,green\" \"tsc --watch\" \"cross-env NODE_ENV=production node --watch dist/server.js\"",
    "build&prod:watch:alias": "concurrently -n \"TSC,ALIAS,NODE\" -c \"cyan,magenta,green\" \"tsc --watch\" \"chokidar dist --initial --command 'tsc-alias'\" \"cross-env NODE_ENV=production node --watch dist/server.js\"",
    "typecheck": "tsc --noEmit",
    "dev:prod": "npm run build&prod:watch",
    "dev:prod:alias": "npm run build&prod:watch:alias",
    "build&start": "npm run build && npm run start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@supabase/supabase-js": "^2.55.0",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.15.5",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.0",
    "cpx2": "^8.0.0",
    "cross-env": "^10.0.0",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
