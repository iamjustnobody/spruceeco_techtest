{
  "name": "back_end",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "_notes": {
    "info": "This section holds explanations for each script instead of using // comments.",
    "dev_standalone": "Run tsx directly without dotenv",
    "dev": "Run tsx with dotenvx default env file",
    "dev_env_specific": "Run tsx with a specific env file",
    "start_env_specific": "Run compiled server.js with encrypted env file",
    "build&prod:watch": "Compile in watch mode and run dist/server.js with hot reload",
    "build&prod_env_specific:watch": "Same as above but with encrypted env file"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev_standalone": "tsx watch src/server.ts",
    "dev": "dotenvx run tsx watch src/server.ts",
    "dev_env_specific": "dotenvx run -f .env -- tsx watch src/server.ts",
    "lint": "eslint . --ext .ts,.tsx,.mts,.cts",
    "lint:fix": "eslint . --ext .ts,.tsx,.mts,.cts --fix",
    "format": "prettier --write .",
    "build:init": "tsc",
    "build": "tsc && tsc-alias && echo 'Build completed'",
    "build:watch:init": "tsc --watch",
    "build:watch": "concurrently -n \"TSC,ALIAS\" -c \"cyan,magenta\" \"tsc --watch\" \"chokidar dist --initial --command 'tsc-alias'\"",
    "prod": "node dist/server.js",
    "start": "node dist/server.js",
    "start_env": "dotenvx run node dist/server.js",
    "start_env_specific:preview": "dotenvx run -f .env.encrypted -- node dist/server.js",
    "prod:watch": "node --watch dist/server.js",
    "prod_env:watch": "dotenvx run -- node --watch dist/server.js",
    "prod_env_specific:watch": "dotenvx run -f .env.encrypted -- node --watch dist/server.js",
    "build&prod:watch": "concurrently -n \"TSC,NODE\" -c \"cyan,green\" \"tsc --watch\" \"node --watch dist/server.js\"",
    "build&prod_env_specific:watch": "dotenvx run -f .env.encrypted -- concurrently -n \"TSC,NODE\" -c \"cyan,green\" \"tsc --watch\" \"node --watch dist/server.js\"",
    "build&prod:watch:alias": "concurrently -n \"TSC,ALIAS,NODE\" -c \"cyan,magenta,green\" \"tsc --watch\" \"chokidar dist --initial --command 'tsc-alias'\" \"node --watch dist/server.js\"",
    "build&prod_env_specific:watch:alias": "dotenvx run -f .env.encrypted -- concurrently -n \"TSC,ALIAS,NODE\" -c \"cyan,magenta,green\" \"tsc --watch\" \"chokidar dist --initial --command 'tsc-alias'\" \"node --watch dist/server.js\"",
    "typecheck": "tsc --noEmit",
    "dev:prod": "npm run build&prod_env_specific:watch",
    "dev:prod:alias": "npm run build&prod_env_specific:watch:alias"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
