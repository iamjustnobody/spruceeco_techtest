{
  // Visit https://aka.ms/tsconfig to read more about this file
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    // "target": "ESNext", // Use latest JS features
    // "module": "NodeNext", // Output native ESM
    // "moduleResolution": "NodeNext", // Resolve .js/.ts the ESM way

    // For nodejs:
    "lib": ["esnext"],
    // "lib": ["ESNext"],
    "types": ["node"],
    // and npm install -D @types/node
    "allowSyntheticDefaultImports": true,
    // "allowImportingTsExtensions": true,

    // "target": "ES6",
    // "module": "CommonJS",
    // "target": "ES2020",
    // "lib": ["ES2020"],

    // ü§ù Interop & Compatibility
    "esModuleInterop": true, // Enables default imports from CommonJS
    "resolveJsonModule": true, // Allows importing `.json` files
    // "moduleResolution": "node", // Use Node.js-style resolution

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Style Options
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    // ‚õî Ignore unused files
    "noEmitOnError": true, // Don‚Äôt emit output if there are errors

    // "baseUrl": "./src",
    // "paths": {
    //   "@/*": ["*"]
    // }
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "src"],
  "exclude": ["node_modules", "dist"]
}
